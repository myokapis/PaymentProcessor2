{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for transaction details",

  "type": "object",

  "properties": {
    "id": {
        "type": "string"
    },
    "total_amount": {
        "type": "integer"
    },
    "encrypted_card_data": {
        "type": "string"
    },
    "reader": {
        "$ref": "reader-schema.json"
    },
    "fallback": {
        "type": "boolean"
    },
    "action": {
        "type": "string"
    },
    "product_context": {
        "type": "string"
    },
    "metadata": {
        "$ref": "metadata-schema.json"
    },
    "expires_at": {
        "type": "string"
    }
  }
}
